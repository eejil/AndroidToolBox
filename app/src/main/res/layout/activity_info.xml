<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="45dp"
        android:text="AccÃ¨s aux informations Android"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageSelect"
        android:layout_width="98dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/listContact"
        app:layout_constraintEnd_toStartOf="@+id/lattitude"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/lattitude"
        android:layout_width="86dp"
        android:layout_height="23dp"
        android:layout_marginBottom="32dp"
        android:text="Lattitude : "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/longitude"
        app:layout_constraintEnd_toStartOf="@+id/valLatt"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/longitude" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:text="Longitude : "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/listContact"
        app:layout_constraintEnd_toStartOf="@+id/valLong" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listContact"
        android:layout_width="409dp"
        android:layout_height="406dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/valLatt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/valLong"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/valLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/listContact"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>